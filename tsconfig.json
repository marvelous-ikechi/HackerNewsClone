{
  "compilerOptions": {
    "paths": {
      "src/*": ["./src/*"],
      "lib/*": ["./src/lib/*"],
      "components/*": ["./src/components/*"],
      "auth/*": ["./src/auth/*"],
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
